--{{{  kilo, mega 
VAL K IS 1024:
VAL M IS K*K:
--}}}

--{{{  HIGH, LOW priority levels
VAL HIGH IS 0:
VAL LOW IS 1:
--}}}

--{{{  problem size (keep it simple for now!)
VAL number.of.transputers IS 1 :
VAL processors IS 1 :
--}}}

--{{{  hardware description -  single T425

[number.of.transputers]NODE System:
ARC Hostlink:

NETWORK
  DO
    SET System[0] (type, memsize := "T805", 4*M)
    CONNECT System[0][link][0] TO HOST WITH Hostlink
:
--}}}

--{{{  Mapping
NODE framebuf.p :
NODE cntlsys.p :
NODE raytrace.p :

MAPPING
  DO
    MAP framebuf.p ONTO System[0]
    MAP cntlsys.p ONTO System[0]
    MAP raytrace.p ONTO System[0]
:
--}}}

--{{{  Code
#INCLUDE "hostio.inc"
#USE "framebuf.c4h"
#USE "cntlsys.c4h"
#USE "raytrace.c4h"

CONFIG
  CHAN OF SP frame.in, frame.out :
  PLACE frame.in, frame.out ON Hostlink :
  CHAN OF ANY forward, back :
  CHAN OF ANY f,b :
  CHAN OF ANY graphics, soft :
  CHAN OF INT image :

  VAL true      IS #FFFF :
  VAL false     IS #0000 :

  PAR
    PROCESSOR framebuf.p
      frameBuffer (frame.in, frame.out, graphics, image, processors, 50, 34500, 0, 25000000)
    PROCESSOR cntlsys.p
      controlSystem (forward, back, graphics, image, processors)
    PROCESSOR raytrace.p
      rayTrace (forward, back, soft, soft, false, 0)
:
--}}}
  


